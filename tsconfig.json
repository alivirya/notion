{
  "compilerOptions": {
    "lib": ["es2020"],
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es2020",
    "outDir": "bin",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
